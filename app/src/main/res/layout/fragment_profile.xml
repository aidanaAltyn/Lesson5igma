<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#1C8181"
    tools:context=".ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginBottom="86dp"
        android:orientation="vertical"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/some_id"
            android:text="Дональ Трамп"
            android:gravity="center_horizontal"
            android:textColor="@color/black"
            android:layout_marginTop="56dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:text="maga@gmail.com"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/namber"
            android:layout_width="match_parent"
            android:text="+996707899439"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/otzyv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="27dp"
            android:drawableStart="@drawable/ic_baseline_airplanemode_active_24"
            android:drawableEnd="@drawable/ic_baseline_send_24"
            android:text=" Оставить отзыв" />



        <View
            android:id="@+id/icon"
            android:background="@drawable/len"
              android:layout_marginLeft="50dp"
                android:layout_marginTop="17dp"
                android:layout_width="279dp"
                android:layout_height="1dp"/>

        <TextView
            android:id="@+id/nas"
            android:drawableStart="@drawable/ic_settings_24"
            android:text=" Настройки"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="23dp"
            android:drawableEnd="@drawable/ic_baseline_send_24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <ImageView
        android:id="@+id/tramp"
        android:layout_width="104dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="50dp"
        android:src="@drawable/ellipse"
        android:layout_height="104dp"/>








</androidx.constraintlayout.widget.ConstraintLayout>

